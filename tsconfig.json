{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "components/*": ["./src/components/*"],
      "api": ["./src/api"],
      "api/*": ["./src/api/*"],
      "store": ["./src/store"],
      "store/*": ["./src/store/*"],
      "context": ["./src/context"],
      "context/*": ["./src/context/*"],
    }
  },
  "include": ["src"]
}
